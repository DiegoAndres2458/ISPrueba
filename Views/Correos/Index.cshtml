@model IEnumerable<ISPrueba.Models.Correo>

@{
    ViewData["Title"] = "Index";
}

<h1>Correos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th @Html.DisplayNameFor(model => model.Correo1)>
                Correo
            </th>
            <th @Html.DisplayNameFor(model => model.IdPersonaNavigation)>
                Nombre
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Correo1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdPersonaNavigation.Nombre)
            </td>
            <td style="text-align: right;">
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" class="btn btn-info" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
